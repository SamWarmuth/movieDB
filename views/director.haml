- director = Director.get(params[:key])
- result = YAML.load(open(URI.escape("http://api.themoviedb.org/2.1/Person.search/en/yaml/"+$API_KEY+'/'+director.name)).read)[0]
- profile_picture = ''
- result['profile'].each do |image|
	-profile_picture = image['image']['url'] if image['image']['size'] == "profile"
%h1
	= director.name
%h2
	-if director.age != 0
		= director.age
		years old
%h3
	- director.movies.each do |movie|
		%p
			%a{:href => "/movie/#{movie.title}"} #{movie.title}
%p
	%a{:href => "/editDirector/#{director.name}"} Edit Director
	|
	%a{:href => "/deleteDirector/#{director.name}"} Delete Director